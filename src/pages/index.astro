---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Nav from '../components/Nav.astro';
import Search from '../components/Search.astro';
import Mensaje from '../components/Mensaje.astro';
import Persona from '../components/Persona.astro';
---

<Layout title="Welcome to Astro.">
	<main>

		<Nav/>

		<body class="bg-gradient-to-b from-purple-light to-white min-h-screen p-4">
			<div class="max-w-md mx-auto space-y-4">
				<div class="flex items-center justify-between">
					<h1 class="text-xl font-semibold">Messages</h1>
					<div class="w-8 h-8 bg-zinc-100 rounded-full"></div>
				</div>
		
				<div class="flex overflow-x-auto space-x-3 py-2 -mx-4 px-4">
					<div class="flex flex-col items-center space-y-1">
						<div class="relative">
							<img src="/placeholder.svg?height=48&width=48" alt="Daniel" class="w-12 h-12 rounded-full object-cover">
							<div class="absolute top-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></div>
						</div>
						<span class="text-xs">Daniel</span>
					</div>
					<div class="flex flex-col items-center space-y-1">
						<div class="relative">
							<img src="/placeholder.svg?height=48&width=48" alt="Nextlo" class="w-12 h-12 rounded-full object-cover">
							<div class="absolute top-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></div>
						</div>
						<span class="text-xs">Nextlo</span>
					</div>
					<div class="flex flex-col items-center space-y-1">
						<div class="relative">
							<img src="/placeholder.svg?height=48&width=48" alt="Anna" class="w-12 h-12 rounded-full object-cover">
							<div class="absolute top-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></div>
						</div>
						<span class="text-xs">Anna</span>
					</div>
					<div class="flex flex-col items-center space-y-1">
						<div class="relative">
							<img src="/placeholder.svg?height=48&width=48" alt="Nelly" class="w-12 h-12 rounded-full object-cover">
							<div class="absolute top-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></div>
						</div>
						<span class="text-xs">Nelly</span>
					</div>
					<div class="flex flex-col items-center space-y-1">
						<div class="w-12 h-12 bg-zinc-100 rounded-full flex items-center justify-center">
							<span class="text-sm">+15</span>
						</div>
					</div>
				</div>
		
				<Search/>
				
				<div>
					<h2 class="text-sm font-medium mb-3">Pinned Chats</h2>
					<div class="grid gap-3">

						<Mensaje user='George Lobko' 
						href='/placeholder.svg?height=40&width=40'
						body='Thanks for the quick'/>

						<Mensaje user='Amelia Peries' 
						href='/placeholder.svg?height=40&width=40'
						body="I'm stuck in traffic"/>

					</div>
				</div>
		
				<div>
					<h2 class="text-sm font-medium mb-3">All Chats</h2>
					<div class="space-y-3">

						<Persona user='Kalista Rekev' href='/placeholder.svg?height=40&width=40' hour='10.23' body='I hate marshmello'/>

						<Persona user='Kalista Rekev' href='/placeholder.svg?height=40&width=40' hour='10.23' body='I hate marshmello'/>

						<Persona user='Kalista Rekev' href='/placeholder.svg?height=40&width=40' hour='10.23' body='I hate marshmello'/>

						<Persona user='Kalista Rekev' href='/placeholder.svg?height=40&width=40' hour='10.23' body='I hate marshmello'/>
		
		
					</div>
				</div>
			</div>

	</main>
</Layout>
