---
import Layout from '../layouts/Layout.astro';
import Mensaje from '../components/Mensaje.astro';

// Fetch data from the FastAPI endpoint
const response = await fetch('http://127.0.0.1:8000/messages');
const messages = await response.json();
---

<Layout title="Welcome to Astro">
  <main>
    <body class="bg-gradient-to-b from-purple-light to-white min-h-screen p-4">
      <div class="relative pt-8 pb-10 mb-12">
        <h1 class="text-5xl md:text-6xl font-extrabold text-center relative z-10 bg-clip-text text-transparent bg-gradient-to-r from-fuchsia-500 to-pink-600">
          Influsend
        </h1>
        <div class="absolute inset-0 blur-[64px] bg-gradient-to-r from-fuchsia-500/20 to-pink-600/20 z-0"></div>
      </div>
      
      <!-- Render each message as a Mensaje component -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
		{messages.map(message => (
		  <Mensaje 
			user={`User ${message.user_id}`} 
			href='/placeholder.svg?height=40&width=40'
			fecha='10.23'
			body={message.message} 
		  />
		))}
	  </div>
	  
    </body>
  </main>
</Layout>

