---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="shadow-lg bg-gradient-to-b from-purple-light to-white min-h-screen p-4"></body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
    --accent: 217, 70, 239; /* Fuchsia 500 */
    --accent-light: 232, 121, 249; /* Fuchsia 400 */
    --accent-dark: 192, 38, 211; /* Fuchsia 600 */
    --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent-dark)),
        rgb(var(--accent)) 30%,
        rgb(var(--accent-light)) 60%
    );
    --text-color: #e0e0e0;
    --background-color: #1e2432; /* Slate 900 */
    --surface-color: #1e2432; /* Slate 800 */
}

html {
    color: var(--text-color);
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: var(--background-color);
}

body {
    margin: auto;
    padding: 1.5rem;
    
    max-width: calc(100%);
    font-size: 18px;
    line-height: 1.6;
    background-color: var(--surface-color);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
 
}

h1, h2, h3, h4, h5, h6 {
    color: rgb(var(--accent-light));
}

a {
    color: rgb(var(--accent));
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover {
    color: rgb(var(--accent-light));
}

code {
    background-color: #262b34; /* Slate 700 */
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: 'Courier New', Courier, monospace;
}

/* Subtle accent border */


/* Additional styles for better integration with the Instagram-post component */
.instagram-post {
    background-color: #2d3748; /* Slate 700, slightly lighter than the surface color */
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1.5rem;
}

.instagram-post img {
    border-color: rgb(var(--accent));
}

.instagram-post button {
    background-color: rgba(var(--accent), 0.1);
    color: rgb(var(--accent-light));
    transition: background-color 0.3s ease;
}

.instagram-post button:hover {
    background-color: rgba(var(--accent), 0.2);
}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	
</style>
