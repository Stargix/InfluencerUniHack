---
interface Props {
	user: string;
	body: string;
	href: string;
}

const { href, user, body } = Astro.props;
---
<div class="bg-gray-900 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 mx-auto w-96">
	<div class="flex items-center space-x-4">
	  <img src={href} alt="User avatar" class="w-12 h-12 rounded-full object-cover border-2 border-fuchsia-500">
	  <h3 class="text-lg font-semibold text-gray-100">{user}</h3>
	</div>
	
	<p class="mt-4 text-sm text-gray-300">{body}</p>
  
	<div class="mt-6 space-y-2">
	  <button class="w-full bg-fuchsia-900 text-fuchsia-100 text-sm font-medium px-4 py-2 rounded transition hover:bg-fuchsia-800 focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:ring-opacity-50 flex items-center justify-center">
		<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
		  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
		  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
		</svg>
		Open Instagram
	  </button>
  
	  <button class="w-full bg-fuchsia-900 text-fuchsia-100 text-sm font-medium px-4 py-2 rounded transition hover:bg-fuchsia-800 focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:ring-opacity-50 flex items-center justify-center">
		<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
		  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
		</svg>
		Answer with AI
	  </button>
	</div>
  </div>