<div class="fixed flex justify-center w-full max-w-md mx-auto bottom-0 left-0 right-0 mb-7">
    <input 
      id="busca"
      type="text" 
      placeholder="Search messages" 
      class="w-full pl-12 pr-4 py-3 bg-gray-800 border border-gray-700 rounded-full text-lg text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-fuchsia-700 focus:border-transparent transition duration-200 ease-in-out"
    >
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      class="h-6 w-6 text-gray-500 absolute left-4 top-1/2 transform -translate-y-1/2 pointer-events-none transition duration-300 ease-in-out" 
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" 
      />
    </svg>
  </div>
  

  <script>

var input = document.getElementById('busca');

if (input) {
  // Agregamos un evento para cuando se presiona una tecla
  input.addEventListener('keydown', function(event) {
    // Verificamos si la tecla presionada es 'Enter' (código 13)
    if (event.key === 'Enter') {
      // Obtener el valor del input
      if (input) {
        var valor = (input as HTMLInputElement).value;
        
        // Usamos el valor (puedes hacer lo que desees con él)
        console.log('El valor del input es:', valor);
        
        // Opcionalmente, puedes limpiar el input después de presionar Enter
        (input as HTMLInputElement).value = '';  // Esto limpiará el input
      }
    }
  });
}

  </script>